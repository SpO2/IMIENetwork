{% extends "ImieNetworkSiteBundle:Eleve:layout.html.twig" %} 
{#{% extends '::base.html.twig' %}#}

{% block content %}
    <h1>Liste de toutes mes offres</h1>

    
        {% for entity in entities %}
            <div class="container">
                <div class="col-md-6">
                    <h3>{{ entity.titre }}</h3>
                    <p>{{ entity.typeposte }}</p>
                    <p>{{ entity.description }}</p>
                </div>
                <div  class="col-md-6">
                    </br>
                    <p> <a type="button" class="btn btn-primary" href="{{ path('offre_show', { 'id': entity.id }) }}">Description</a>
                        <a type="button" class="btn btn-default" href="{{ path('offre_edit', { 'id': entity.id }) }}">Edition</a>
                    </p>
                        <p><strong>Durée : {{ entity.duree }} mois</strong></p>
                </div>
            </div>

            
        {% endfor %}


    <a href="{{ path('offre_new')}}" class="btn btn-danger">{{'Créer une offre'|trans}}</a>
{% endblock %}
