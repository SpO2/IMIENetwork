{% extends "ImieNetworkSiteBundle:Eleve:layout.html.twig" %}

{% block content %}
    <h1>Détail de l'offre</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Titre de l'offre</th>
                <td>{{ entity.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Information sur le contact</th>
                <td>{{ entity.detailcontact }}</td>
            </tr>
            <tr>
                <th>Durée du contrat</th>
                <td>{{ entity.duree }}</td>
            </tr>
            <tr>
                <th>Type de poste</th>
                <td>{{ entity.typeposte }}</td>
            </tr>
            
            <tr>
                <th>Type de contrat</th>
                <td>{{ entity.typecontrat.libelle }}</td>
            </tr>
            <tr>
                <th>Lieu de l'offre</th>
                <td>{{ entity.ville.libelle }} {{ entity.ville.codepostal }}</td>
            </tr>

        </tbody>
    </table>
    <br>
    <a href="{{ path('offre_showsearch', { 'selectville': app.session.get('ville'), 'selectcontrat': app.session.get('contrat') }) }}">Retour aux offres</a>
{% endblock %}
