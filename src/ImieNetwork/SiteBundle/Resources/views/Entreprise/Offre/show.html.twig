    <div class="col-md-10">
        <h3 class="text-center">{{ offre.titre }}</h3>
        <dl class="dl-horizontal">
            <dt>Contenu: </dt>
            <dd>{{ offre.description }}</dd>
            <dt>Type: </dt>
