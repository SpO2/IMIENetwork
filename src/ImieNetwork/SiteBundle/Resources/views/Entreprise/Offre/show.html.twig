            <dt>Date de debut: </dt>
            <dd>{{ offre.datedebut }}</dd>
            <dt>Date de fin: </dt>
            <dd>{{ offre.datefin }}</dd>
            <dt>Durée: </dt>
            <dd>{{ offre.duree }}</dd>
            <dt>Détail contact: </dt>
            <dd>{{ detailContact.libelle }}</dd>
         </dl>
    </div>
    <div  class="col-md-10">
        </br>
        <p class = "text-center"> <button type="button" class="btn btn-primary">Editer</button>
