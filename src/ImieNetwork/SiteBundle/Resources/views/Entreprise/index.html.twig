{% extends "ImieNetworkSiteBundle:Entreprise:layout.html.twig" %}
    {% block content %}
<div id="my_carousel" class="carousel slide" data-ride="carousel">
    <!-- Bulles -->
    <ol class="carousel-indicators">
        <li data-target="#my_carousel" data-slide-to="0" class="active"></li>
                {% for evenement in evenements %}
        <li data-target="#my_carousel" data-slide-to="1"></li>
       {%endfor%}
    </ol>
    <!-- Slides -->
    <div class="carousel-inner">
        <!-- Page 1 -->
        <div class="item active">  
            <div class="carousel-page">
                Bienvenu sur le site de l'IMIE
            </div> 
            <div class="carousel-caption">Profitez de nos fonctionnalités</div>
        </div>   


        {% for evenement in evenements %}
        <!-- Page 3 -->
        <div class="item">  
            <div class="carousel-page">
                {{ evenement.libelle }}
                <p>{{ evenement.description }}</p>
            </div>  
            <div class="carousel-caption">Test</div>
        </div>
       {%endfor%}

    </div>
    <!-- Contrôles -->
    <a class="left carousel-control" href="#my_carousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#my_carousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>

<div class="media">
    {% for enquete in enquetes %}
    <div class="media-body">
        <h4 class="media-heading">Enquête !</h4>
        <p>{{ enquete.contenu }}</p>
        <p> <a href="{{ enquete.url }}">{{ enquete.url }}</a> </p>
    </div>
    {%endfor%}
</div>

<style>
    .carousel-page
    {   
        width:100%;
        height:250px;
        background-color:#1BAFCD;
        color:white;
        text-align: center;
    }
</style>
     {% endblock %}

